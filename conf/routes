# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     	/                           						controllers.Application.index()

# Displays
GET			/display					  						controllers.DisplayController.setupDisplay(id: String ?= null)

# Display Manager
GET			/display/manager			  						controllers.DisplayController.showAvailableDisplays
POST    	/display/manager			  						controllers.DisplayController.registerDisplay
POST    	/display/manager/:id/delete	  						controllers.DisplayController.deleteDisplay(id: Long)

# Display Layout 
GET     /display/layouts                  	  					controllers.LayoutController.allLayouts()
GET     /display/layouts/:id            						controllers.LayoutController.layout(id: Long)
POST    /display/layouts                						controllers.LayoutController.newLayout()
POST  	/display/layouts/:id/delete             				controllers.LayoutController.deleteLayout(id: Long)
POST	/display/layouts/:id/save								controllers.LayoutController.saveLayout(id: Long)

# Weather Socket
GET		/weather/socket											controllers.WeatherController.webSocket
GET		/newsfeed/socket										controllers.NewsFeedController.webSocket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
